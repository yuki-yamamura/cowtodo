{
  "name": "cowtodo",
  "version": "1.0.0",
  "description": "A CLI tool that lists TODO in Markdown files.",
  "type": "module",
  "bin": {
    "cowtodo": "./src/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node src/index.js",
    "build": "tsc",
    "dev": "tsx watch src/index.tsx",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "postinstall": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuki-yamamura/cowtodo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yuki-yamamura/cowtodo/issues"
  },
  "homepage": "https://github.com/yuki-yamamura/cowtodo#readme",
  "dependencies": {
    "cowsay": "^1.6.0",
    "ink": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.17",
    "@types/react": "^18.3.21",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
